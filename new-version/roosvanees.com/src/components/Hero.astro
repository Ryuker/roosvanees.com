---
import { Icon } from 'astro-icon/components';
---

<section class="w-full flex justify-center">
  <div class="container mt-20 mb-5 flex items-center flex-col">
    <div class="border-2 border-pink-800 rounded-full p-5">
      <Icon name="rose" class="text-7xl text-pink-500" />
    </div>
    
    <div class="flex items-center justify-center flex-col">
      <h1 class="text-5xl text-pink-700 ">Roos van Ees</h1>
      <div class="w-full h-0.5 bg-pink-600 rounded-lg px-10 mt-1"></div>
      <div class="text-l text-center md:text-l text-pink-600 flex flex-wrap justify-center px-10 md:px-0 max-w-l">
        <span class="px-3 basis-1/3 md:basis-auto grow">Research, </span>
        <span class="px-3 basis-1/3 md:basis-auto grow">Documentary, </span>
        <span class="px-3 basis-1/3 md:basis-auto grow">Photography, </span>
        <span class="px-3 basis-1/3 md:basis-auto grow">Interviews, </span> 
        <span class="px-3 basis-1/3 md:basis-auto grow">Collages, </span> 
        <span class="px-3 basis-1/3 md:basis-auto grow">Essays </span>
        <span class="px-3 basis-full md:basis-auto grow">and more.. </span>
      <div>
    </div>
  </div>
</section>